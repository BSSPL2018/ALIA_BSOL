@section Scripts{
    <script type="text/javascript">
    var app = new Vue({
        el: '#app',
        data: {
            input:@(jsonData),
            EngineNo: ""
        },
        methods: {
            viewReport: function () {
                $.postData("@Url.Action("ReadWarrantyDetails", "Warranty")", { EngineNo: this.EngineNo}
                    , function (data) {
                        if (data ) {
                            app.input.EngineNo = data.EngineNo;
                            app.input.ProductCode = data.ProductCode;
                            app.input.ModelCode = data.ModelCode;
                            app.input.Invoice_Date = data.Invoice_Date;
                            app.input.DeliveryDate = data.DeliveryDate;
                            app.input.WarrantyRegistrationDate = data.WarrantyRegistrationDate;
                            app.input.CustomerName = data.CustomerName;
                            app.input.Cust_ContactNo = data.Cust_ContactNo;
                            app.input.Itemcode = data.Itemcode;
                        }
                    });
            },
            onData: function () {
                return { EngineNo: $("#ddSerialNo").val() };
            },
            onSerialNoChange: function (e) {
                this.EngineNo = e.sender.value();
                this.viewReport();                
            }
        }
    });
    </script>
